{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "task": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "实用工具",
            "开发辅助",
            "配置检测",
            "资源管理",
            "办公编辑",
            "输入法",
            "集成开发",
            "录屏看图",
            "磁盘数据",
            "安全急救",
            "网课会议",
            "即时通讯",
            "安装备份",
            "游戏娱乐",
            "运行环境",
            "压缩镜像",
            "美化增强",
            "驱动管理",
            "下载上传",
            "浏览器",
            "影音播放",
            "远程连接"
          ]
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "author",
        "category",
        "name",
        "url"
      ]
    },
    "extra": {
      "properties": {
        "missing_version": {
          "type": "string"
        },
        "require_windows": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "parameter": {
      "properties": {
        "build_cover": {
          "type": "string"
        },
        "build_manifest": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "compress_level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "resolver_cd": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "build_manifest"
      ],
      "type": "object"
    },
    "producer_required": {
      "type": "object"
    },
    "regex": {
      "properties": {
        "download_link": {
          "type": "string"
        },
        "download_name": {
          "type": "string"
        },
        "scraper_version": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "download_name"
      ]
    },
    "template": {
      "properties": {
        "producer": {
          "type": "string"
        },
        "resolver": {
          "type": "string"
        },
        "scraper": {
          "type": "string"
        }
      },
      "required": [
        "producer"
      ],
      "type": "object"
    }
  },
  "required": [
    "parameter",
    "producer_required",
    "template",
    "task",
    "regex"
  ],
  "type": "object"
}

